<h4><i class="fa fa-bolt"></i> Memory</h4>

<table class="table table-striped table-hover">
    <tbody>
    <tr>
        <td colspan="4">
            <div class="row">
                <div class="col-xs-9">
                    <div class="progress">
                        <div class="progress-bar progress-bar-used"
                             role="progressbar"
                             aria-valuenow="{{ memoryInfo['used_act_p'] }}"
                             aria-valuemin="0"
                             aria-valuemax="{{ memoryInfo['total_act'] }}"
                             style="width: {{ memoryInfo['used_act_p'] }}%">
                            <span class="sr-only">{{ memoryInfo['used_act_p']}}% Used</span>
                        </div>
                        <div class="progress-bar progress-bar-buffers"
                             role="progressbar"
                             aria-valuenow="{{ memoryInfo['buffers'] }}"
                             aria-valuemin="0"
                             aria-valuemax="{{ memoryInfo['total_act'] }}"
                             style="width: {{ memoryInfo['buffers_p'] }}%">
                            <span class="sr-only">{{ memoryInfo['buffers']|number_format }}% Buffers</span>
                        </div>
                        <div class="progress-bar progress-bar-cache"
                             role="progressbar"
                             aria-valuenow="{{ memoryInfo['cache'] }}"
                             aria-valuemin="0"
                             aria-valuemax="{{ memoryInfo['total_act'] }}"
                             style="width: {{ memoryInfo['cache_p'] }}%">
                            <span class="sr-only">{{ memoryInfo['cache']|number_format }}% Cache</span>
                        </div>
                        <div class="progress-bar progress-bar-free"
                             role="progressbar"
                             aria-valuenow="{{ memoryInfo['free'] }}"
                             aria-valuemin="0"
                             aria-valuemax="{{ memoryInfo['total_act'] }}"
                             style="width: {{ memoryInfo['free_p'] }}%">
                            <span class="sr-only">{{ memoryInfo['free']|number_format }}% Free</span>
                        </div>
                    </div>
                </div>
                <div class="col-xs-3">
                    <p class="text-right">{{ memoryInfo['mem_total'] }}MB&nbsp;</p>
                </div>
            </div>
        </td>
    </tr>
    <tr>
        <td class="membar-key">
        <span class="membar-key-used">
          {{ memoryInfo['used_act_p']|number_format }}%
            </div>
        </td>
        <td>
            <p>Used</p>
        </td>
        <td class="membar-key">
        <span class="membar-key-buffers">
          {{ memoryInfo['buffers_p']|number_format }}%
            </div>
        </td>
        <td>
            <p>Buffers</p>
        </td>
    </tr>

    <tr>
        <td class="membar-key">
        <span class="membar-key-cache">
          {{ memoryInfo['cache_p']|number_format }}%
            </div>
        </td>
        <td>
            <p>Cache</p>
        </td>
        <td class="membar-key">
        <span class="membar-key-free">
            {{ memoryInfo['free_p']|number_format }}%
            </div>
        </td>
        <td>
            <p>Free</p>
        </td>
    </tr>
    </tbody>
</table>
